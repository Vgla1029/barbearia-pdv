
html {
    width: 100%; height: 100%;
    font-family: "Nova Square", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 16px;
    color: #eee;
}

body {
    margin: 0;
    padding: 0;
    width: 100%; height: 100%;
    background: linear-gradient(135deg, #0e0e0e, #2b2b2b);
    background-attachment: fixed;
    background-size: cover;
}

.glass {
    backdrop-filter: blur(6px);
    background: rgba(20,20,20,0.5);
    border-radius: 12px;
    box-shadow: 0 0 10px #000;
}

.card {
    padding: 20px;
    margin: 15px 0;
    border-radius: 18px;
    backdrop-filter: blur(4px);
    background: rgba(40,40,40,0.45);
    box-shadow: 0 0 8px #111;
    transition: .3s ease;
}
.card:hover {
    transform: scale(1.03);
    box-shadow: 0 0 12px #222;
}

header {
    width: 100%;
    padding: 14px 0;
    display: flex;
    justify-content: center;
    background: rgba(0,0,0,0.45);
    backdrop-filter: blur(5px);
    box-shadow: 0 0 10px #000;
}

nav {
    display: flex;
    gap: 18px;
}
nav a {
    color: #eee;
    text-decoration: none;
    font-size: 1rem;
    transition: .3s;
}
nav a:hover {
    color: white;
    text-shadow: 0 0 6px rgba(255,255,255,0.8);
    transform: scale(1.08);
}

main {
    width: 80%;
    margin: 40px auto;
    min-height: 70vh;
}

footer {
    text-align: center;
    padding: 15px 0;
    color: #777;
    font-size: .9rem;
    backdrop-filter: blur(3px);
}

input, select, textarea {
    width: 100%;
    padding: 12px 15px;
    border: none;
    margin: 8px 0;
    color: #fff;
    box-sizing: border-box;
    border-radius: 16px;
    background: #303030;
    transition: .4s;
}
input:hover, input:focus {
    transform: scale(1.05);
    outline: none;
    box-shadow: 0 0 8px rgba(255,255,255,0.3);
}

button, .btn {
    width: 100%;
    padding: 12px 15px;
    border: none;
    border-radius: 16px;
    margin: 8px 0;
    color: white;
    cursor: pointer;
    background: #2b2b2b;
    transition: .4s;
}
button:hover, .btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 12px rgba(255,255,255,0.4);
}

table {
    width: 100%;
    border-collapse: collapse;
}
td, th {
    padding: 12px 10px;
    border-bottom: 1px solid #444;
    color: #c9c9c9;
}

/* Espaço entre a tabela e o que vem depois (botão, por exemplo) */
table {
    margin-bottom: 14px;
}
tr:hover {
    background: rgba(255,255,255,0.05);
}

::-webkit-scrollbar { width: 8px; }
::-webkit-scrollbar-thumb {
    background: #444;
    border-radius: 6px;
}

h2 {
    color: #474747;
    font-size: 1.2rem;
    margin: 0 0 12px 0;
}
