<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDV Barbearia</title>
    {% load static %}
    <link rel="stylesheet" type="text/css" href="{% static 'global/styles.css' %}">
    <link rel="stylesheet" type="text/css" href="{% static 'login/login.css' %}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nova+Square&display=swap" rel="stylesheet">

    {% block extra_styles %}{% endblock %}

    <style>
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 1.5rem;
        background: rgba(17,17,17,0.7); /* preto translúcido */
        backdrop-filter: blur(8px);
        color: #fff;
        font-family: 'Nova Square', sans-serif;
        position: relative;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .navbar .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.2rem;
        font-weight: bold;
    }
    .navbar .logo img {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        transition: transform 0.3s;
    }
    .navbar .logo img:hover {
        transform: scale(1.1);
    }

    /* Menu escondido no mobile */
    .nav-links {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 60px;
        right: 10px;
        background: rgba(17,17,17,0.85);
        backdrop-filter: blur(8px);
        padding: 15px;
        border-radius: 10px;
        gap: 1rem;
        opacity: 0;
        pointer-events: none;
        transform: translateY(-10px);
        transition: all 0.3s ease;
    }
    .nav-links a {
        color: #fff;
        text-decoration: none;
        padding: 6px 12px;
        border-radius: 6px;
        transition: all 0.3s;
    }
    .nav-links a:hover {
        background: rgba(255,255,255,0.1);
        transform: scale(1.05);
    }
    .nav-links.active {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
    }

    /* Hamburger */
    .hamburger {
        display: flex;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
        z-index: 1100;
    }
    .hamburger span {
        width: 25px;
        height: 3px;
        background: #fff;
        border-radius: 2px;
        transition: all 0.3s;
    }
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
    }

    @media (min-width: 768px){
        .nav-links {
            display: flex;
            position: static;
            flex-direction: row;
            background: none;
            backdrop-filter: none;
            padding: 0;
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
            gap: 1rem;
        }
        .hamburger {
            display: none;
        }
    }
    </style>
</head>
<body>
    {% with excluded_routes='/login/,/register/' %}
        {% if request.path not in excluded_routes %}
        <header class="navbar">
            <div class="logo">
                <img src="{% static 'global/logo.png' %}" alt="Logo">
                <span>Barbearia PDV</span>
            </div>
            <nav class="nav-links">
                <a href="{% url 'dashboard' %}">Dashboard</a>
                <a href="{% url 'clientes' %}">Clientes</a>
                <a href="{% url 'servicos' %}">Serviços</a>
                <a href="{% url 'agendamentos' %}">Agendamentos</a>
                <a href="{% url 'relatorios' %}">Relatórios</a>
                <a href="{% url 'logout' %}">Sair</a>
            </nav>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </header>
        {% endif %}
    {% endwith %}

    <main>
        {% block content %}{% endblock %}
    </main>

    <script>
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');
    if(hamburger){
        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.classList.toggle('active');
        });
    }
    </script>
</body>
</html>